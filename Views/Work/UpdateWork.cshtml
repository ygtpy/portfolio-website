@model AkademiQPortfolio.Entities.Work
@{
    ViewData["Title"] = "Proje Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-2xl mx-auto">
    <div class="flex items-center gap-4 mb-6">
        <a href="/Work/Index" class="p-2 hover:bg-slate-100 rounded-full transition-colors">
            <span class="material-symbols-outlined">arrow_back</span>
        </a>
        <h2 class="text-2xl font-bold text-slate-800 dark:text-white">Proje Düzenle</h2>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
        <form method="post" class="space-y-6">
            <input type="hidden" name="WorkId" value="@Model.WorkId" />
            
            <div>
                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Proje Başlığı</label>
                <input type="text" name="Title" value="@Model.Title" class="w-full px-4 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-slate-50 dark:bg-slate-700 focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all" required />
            </div>
            
            <div>
                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Alt Başlık / Kategori</label>
                <input type="text" name="SubTitle" value="@Model.SubTitle" class="w-full px-4 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-slate-50 dark:bg-slate-700 focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all" />
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Görsel URL</label>
                <div class="flex gap-4 items-start">
                    <div class="flex-1">
                        <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="w-full px-4 py-2 border border-slate-300 dark:border-slate-600 rounded-lg bg-slate-50 dark:bg-slate-700 focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all" />
                        <p class="text-xs text-slate-500 mt-1">Örn: /images/portfolio/1.png</p>
                    </div>
                    @if(!string.IsNullOrEmpty(Model.ImageUrl)) {
                        <img src="@Model.ImageUrl" class="w-16 h-16 object-cover rounded-lg border border-slate-200" />
                    }
                </div>
            </div>

            <div class="pt-4 border-t border-slate-100 dark:border-slate-700 flex justify-end">
                <button type="submit" class="px-6 py-2.5 bg-primary text-white rounded-lg font-medium shadow-lg shadow-primary/30 hover:shadow-primary/50 transition-all hover:-translate-y-0.5">
                    Güncelle
                </button>
            </div>
        </form>
    </div>
</div>
