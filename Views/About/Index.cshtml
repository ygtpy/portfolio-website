@model List<AkademiQPortfolio.Entities.About>
@{
    ViewData["Title"] = "Hakkımda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <div class="flex justify-between items-center">
        <h2 class="text-2xl font-bold text-slate-800 dark:text-white">Hakkımda</h2>
        <!-- Genellikle hakkımda bölümü tek kayıt olur, ama liste yapısı istenirse: -->
        @if (Model.Count == 0)
        {
            <a href="/About/CreateAbout" class="px-5 py-2.5 bg-primary text-white rounded-lg font-medium shadow-lg hover:shadow-primary/30 transition-all hover:-translate-y-0.5">
                <span class="flex items-center gap-2"><span class="material-symbols-outlined text-sm">add</span> Bilgi Ekle</span>
            </a>
        }
    </div>

    @foreach(var item in Model)
    {
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
            <div class="flex flex-col md:flex-row gap-8">
                <div class="w-full md:w-1/3">
                    @if(!string.IsNullOrEmpty(item.ImageUrl)) {
                        <img src="@item.ImageUrl" class="w-full h-auto rounded-xl shadow-md" alt="Profile" />
                    } else {
                        <div class="w-full h-64 bg-slate-100 rounded-xl flex items-center justify-center text-slate-400">Görsel Yok</div>
                    }
                </div>
                <div class="w-full md:w-2/3 space-y-4">
                    <div>
                        <h3 class="text-2xl font-bold text-slate-800 dark:text-white">@item.NameSurname</h3>
                        <p class="text-primary font-medium">@item.Title</p>
                    </div>
                    
                    <p class="text-slate-600 dark:text-slate-300 leading-relaxed">
                        @item.Description
                    </p>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pt-4 border-t border-slate-100 dark:border-slate-700">
                        <div class="flex items-center gap-3 text-slate-600 dark:text-slate-400">
                             <span class="material-symbols-outlined text-primary">phone</span>
                             <span>@item.Phone</span>
                        </div>
                         <div class="flex items-center gap-3 text-slate-600 dark:text-slate-400">
                             <span class="material-symbols-outlined text-primary">mail</span>
                             <span>@item.Email</span>
                        </div>
                        <div class="flex items-center gap-3 text-slate-600 dark:text-slate-400">
                             <span class="material-symbols-outlined text-primary">location_on</span>
                             <span>@item.Address</span>
                        </div>
                    </div>

                    <div class="pt-6 flex justify-end gap-3">
                         <a href="/About/UpdateAbout/@item.AboutId" class="px-5 py-2 bg-indigo-50 text-indigo-600 rounded-lg font-medium hover:bg-indigo-100 transition-colors">
                            Düzenle
                        </a>
                         <a href="/About/DeleteAbout/@item.AboutId" onclick="return confirm('Silmek istediğinize emin misiniz?')" class="px-5 py-2 bg-red-50 text-red-500 rounded-lg font-medium hover:bg-red-100 transition-colors">
                            Sil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }

     @if(Model.Count == 0) {
            <div class="p-8 text-center text-slate-500 bg-white dark:bg-slate-800 rounded-xl shadow-sm">
                Henüz hakkımda bilgisi girilmemiş.
            </div>
    }
</div>
