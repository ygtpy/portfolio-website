@model Skill
@{
    ViewData["Title"] = "Yeni Yetenek";
    Layout = "~/Views/Admin/Index.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="p-6 min-h-screen flex items-center justify-center">
    <div class="max-w-2xl w-full">

        <div class="mb-6">
            <a href="/Skill/SkillList/" class="inline-flex items-center text-sm text-gray-600 hover:text-indigo-600 transition-colors bg-white px-4 py-2 rounded-lg shadow-sm">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                Listeye Geri Dön
            </a>
        </div>

        <div class="bg-white rounded-2xl shadow-xl shadow-gray-200/50 border border-gray-100 overflow-hidden">
            <div class="p-8">
                <div class="mb-8">
                    <h1 class="text-2xl font-extrabold text-gray-800 tracking-tight">Yeni Yetenek Ekle</h1>
                    <p class="text-gray-500 mt-2 text-sm">Portfolyonuzda sergilenecek yeni bir yetenek tanımlayın.</p>
                </div>

                <form asp-action="CreateSkill" asp-controller="Skill" method="post" class="space-y-6">
                    @Html.AntiForgeryToken()

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Yetenek Adı</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                            </div>
                            <input type="text" asp-for="SkillTitle"
                                   class="block w-full pl-10 pr-4 py-3 border border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 bg-gray-50/50 transition-all outline-none text-gray-700 placeholder-gray-400"
                                   placeholder="Örn: C#, React, UI Design" required />
                        </div>
                    </div>

                    <div>
                        <div class="flex justify-between items-center mb-2">
                            <label class="block text-sm font-semibold text-gray-700">Deneyim Yılı</label>
                            <span id="rangeValue" class="px-3 py-1 bg-indigo-50 text-indigo-600 text-xs font-bold rounded-full">1 Yıl</span>
                        </div>
                        <input type="range" asp-for="SkillValue" min="1" max="40" value="1"
                               oninput="document.getElementById('rangeValue').innerText = this.value + ' Yıl'"
                               class="w-full h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer accent-indigo-600" />
                        <div class="flex justify-between text-[10px] text-gray-400 mt-2 uppercase font-medium">
                            <span>Başlangıç</span>
                            <span>Uzman</span>
                        </div>
                    </div>

                    <div class="pt-4">
                        <button type="submit" class="w-full inline-flex justify-center items-center px-6 py-3.5 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-xl transition-all duration-200 shadow-lg shadow-indigo-100 transform active:scale-[0.98]">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                            Yeteneği Kaydet
                        </button>
                    </div>
                </form>
            </div>

            <div class="bg-gray-50 px-8 py-4 border-t border-gray-100">
                <div class="flex items-center">
                    <svg class="w-5 h-5 text-indigo-400 mr-2" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path></svg>
                    <p class="text-xs text-gray-500">Bu yetenek kaydedildikten sonra otomatik olarak listeleme sayfasında görünecektir.</p>
                </div>
            </div>
        </div>

    </div>
</div>