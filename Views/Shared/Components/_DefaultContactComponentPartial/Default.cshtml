@using AkademiQPortfolio.Entities
@model List<Contact>
@{
    var contact = Model.FirstOrDefault();
}

<section id="section8">
	<div class="container">
		<h2>Bana Ulaşın</h2>
		<div class="row">
			<div class="col-sm-5">
				<h5>İletişim Adresi</h5>
				<ul class="list-icons list-unstyled">
					<li><i class="ion-ios-location-outline"></i>@(contact?.Address ?? "Adres Bilgisi Yok")</li>
					<li><i class="ion-iphone"></i>Telefon: @(contact?.Phone ?? "Telefon Yok")</li>
					<li><i class="ion-ios-email-outline"></i>Email: <a href="mailto:@(contact?.Email)">@(contact?.Email ?? "Email Yok")</a></li>
					<li><i class="ion-ios-home-outline"></i>Website: <a href="@(contact?.WebSite)">@(contact?.WebSite ?? "Site Yok")</a></li>
				</ul>
				<div class="spacer"></div>
				<div class="social-icons">
					<a href="#" class="social-icon"><i class="fa fa-facebook"></i></a>
					<a href="#" class="social-icon"><i class="fa fa-twitter"></i></a>
					<a href="#" class="social-icon"><i class="fa fa-linkedin"></i></a>
                    <a href="#" class="social-icon"><i class="fa fa-github"></i></a>
				</div>
				<div class="spacer"></div>
			</div>
			<div class="col-sm-7">
				<h5>İletişim Formu</h5>
				<form action="/Default/SendMessage" method="post" class="form-horizontal contact-form">
					<div class="form-group">
						<label class="col-sm-2 control-label">Adınız</label>
						<div class="col-sm-10">
							<input type="text" class="contact-name form-control" name="SenderName" required />
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Email</label>
						<div class="col-sm-10">
							<input type="email" class="contact-email form-control" name="SenderEmail" required />
						</div>
					</div>
                     <div class="form-group">
						<label class="col-sm-2 control-label">Konu</label>
						<div class="col-sm-10">
							<select class="form-control" name="MessageSubject" required>
                                <option value="" disabled selected>Konu Seçiniz</option>
                                <option value="Proje teklifi">Proje teklifi</option>
                                <option value="İşbirliği">İşbirliği</option>
                                <option value="Eğitim/kurumsal eğitim talebi">Eğitim/kurumsal eğitim talebi</option>
                                <option value="Web API geliştirme talebi">Web API geliştirme talebi</option>
                                <option value="Teknik destek/danışmanlık">Teknik destek/danışmanlık</option>
                                <option value="Diğer">Diğer</option>
                            </select>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Mesaj</label>
						<div class="col-sm-10">
							<textarea name="MessageText" class="contact-message form-control" rows="3" required></textarea>
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-10 col-sm-offset-2">
							<button type="submit" class="button solid-button purple">Mesaj Gönder</button>
						</div>
					</div>
				</form>
			</div>
		</div>
        @if (!string.IsNullOrEmpty(contact?.MapLocation)) {
		    <div class="map" id="map">
                <iframe src="@contact.MapLocation" width="100%" height="400" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        }
	</div>
</section>
