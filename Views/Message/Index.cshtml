@model List<AkademiQPortfolio.Entities.Message>
@{
    ViewData["Title"] = "Mesajlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-6">
    <h2 class="text-2xl font-bold mb-6 text-slate-800 dark:text-white">Gelen Kutusu</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var item in Model)
        {
            <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg p-6 border-l-4 transition-all hover:scale-105 @(item.IsRead == true ? "border-slate-300 opacity-80" : "border-primary")" id="msg-card-@item.MessageId">
                <div class="flex justify-between items-start mb-4">
                    <div class="flex items-center gap-3">
                        <div class="h-10 w-10 rounded-full bg-gradient-to-tr from-indigo-500 to-purple-500 flex items-center justify-center text-white font-bold text-lg shadow-md">
                            @item.SenderName?.Length > 0 ? item.SenderName[0] : "?"
                        </div>
                        <div>
                            <h3 class="font-bold text-slate-800 dark:text-white">@item.SenderName</h3>
                            <p class="text-xs text-slate-500">@item.SenderEmail</p>
                        </div>
                    </div>
                    <span class="text-xs text-slate-400 bg-slate-100 dark:bg-slate-700 px-2 py-1 rounded">@(((DateTime)item.SendDate).ToString("dd MMM yyyy"))</span>
                </div>

                <div class="mb-4">
                    <div class="flex items-center gap-2 mb-2">
                        @if (item.IsRead == false)
                        {
                            <span class="w-2 h-2 rounded-full bg-red-500 animate-pulse" id="dot-@item.MessageId"></span>
                        }
                        <h4 class="font-semibold text-primary">@item.MessageSubject</h4>
                    </div>
                    <p class="text-slate-600 dark:text-slate-300 text-sm line-clamp-3">@item.MessageText</p>
                </div>

                <div class="flex justify-between items-center mt-4 pt-4 border-t border-slate-100 dark:border-slate-700">
                    <button onclick="openMessage(@item.MessageId)" class="px-4 py-2 bg-indigo-50 text-indigo-600 rounded-lg hover:bg-indigo-100 text-sm font-medium transition-colors">
                        Oku
                    </button>
                    <a href="/Message/DeleteMessage/@item.MessageId" onclick="return confirm('Silmek istediÄŸinize emin misiniz?')" class="text-red-400 hover:text-red-600 p-2">
                        <span class="material-symbols-outlined text-sm">delete</span>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal -->
<div id="messageModal" class="fixed inset-0 z-50 hidden bg-black/50 backdrop-blur-sm flex items-center justify-center transition-opacity opacity-0">
    <div class="bg-white dark:bg-slate-800 rounded-2xl w-full max-w-2xl transform scale-95 transition-all duration-300 p-0 shadow-2xl overflow-hidden relative">
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 p-6 text-white relative">
            <button onclick="closeModal()" class="absolute top-4 right-4 text-white/70 hover:text-white bg-white/10 hover:bg-white/20 rounded-full p-1 transition-colors">
                <span class="material-symbols-outlined">close</span>
            </button>
            <h3 class="text-2xl font-bold" id="modalSubject">Subject</h3>
            <p class="text-indigo-100 mt-1 flex items-center gap-2">
                <span class="material-symbols-outlined text-sm">person</span> <span id="modalSender">Sender</span>
            </p>
             <p class="text-indigo-200 text-sm flex items-center gap-2">
                <span class="material-symbols-outlined text-sm">mail</span> <span id="modalEmail">email@example.com</span>
            </p>
        </div>
        <div class="p-8">
            <div class="flex justify-between items-center mb-6">
                <span class="px-3 py-1 bg-indigo-50 text-indigo-700 rounded-full text-sm font-medium" id="modalDate">Date</span>
            </div>
            <div class="prose dark:prose-invert max-w-none text-slate-600 dark:text-slate-300 leading-relaxed text-lg" id="modalContent">
                Message content...
            </div>
            <div class="mt-8 flex justify-end">
                <button onclick="closeModal()" class="px-6 py-2.5 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg font-medium transition-colors">Kapat</button>
            </div>
        </div>
    </div>
</div>

<script>
    function openMessage(id) {
        // Show Modal
        const modal = document.getElementById('messageModal');
        modal.classList.remove('hidden');
        // Animate in
        setTimeout(() => {
            modal.classList.remove('opacity-0');
            modal.querySelector('div').classList.remove('scale-95');
            modal.querySelector('div').classList.add('scale-100');
        }, 10);

        // Fetch Data
        fetch('/Message/MessageDetails/' + id)
            .then(response => response.json())
            .then(data => {
                document.getElementById('modalSubject').innerText = data.MessageSubject;
                document.getElementById('modalSender').innerText = data.SenderName;
                document.getElementById('modalEmail').innerText = data.SenderEmail;
                document.getElementById('modalContent').innerText = data.MessageText;
                // Format Date
                const date = new Date(data.SendDate);
                document.getElementById('modalDate').innerText = date.toLocaleDateString('tr-TR', { day: 'numeric', month: 'long', year: 'numeric', hour:'2-digit', minute:'2-digit' });

                // Update UI (Mark as read visually)
                const card = document.getElementById('msg-card-' + id);
                if(card) {
                    card.classList.remove('border-primary');
                    card.classList.add('border-slate-300', 'opacity-80');
                    const dot = document.getElementById('dot-' + id);
                    if(dot) dot.remove();
                }
            });
    }

    function closeModal() {
        const modal = document.getElementById('messageModal');
        modal.classList.add('opacity-0');
        modal.querySelector('div').classList.add('scale-95');
        modal.querySelector('div').classList.remove('scale-100');
        setTimeout(() => {
            modal.classList.add('hidden');
        }, 300);
        // Refresh page to update sidebar badge? Or just leave it. Refresh is safer for sync.
        setTimeout(() => {
             location.reload(); 
        }, 300);
    }
</script>
