@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="flex flex-col gap-6">
    <div class="flex items-center justify-between">
        <h2 class="text-2xl font-bold tracking-tight">Dashboard Overview</h2>
        <div class="text-sm text-slate-500 dark:text-slate-400">Last updated: @DateTime.Now.ToString("g")</div>
    </div>

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        <!-- Stat Card: Skills -->
        <div class="group relative overflow-hidden rounded-2xl border border-slate-200 bg-white p-6 transition-all hover:shadow-lg dark:border-slate-800 dark:bg-surface-dark">
            <div class="flex items-center gap-4">
                <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-blue-50 text-blue-600 transition-colors group-hover:bg-blue-600 group-hover:text-white dark:bg-blue-500/10 dark:text-blue-400 dark:group-hover:bg-blue-500">
                    <span class="material-symbols-outlined text-3xl">code</span>
                </div>
                <div>
                    <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Total Skills</p>
                    <h3 class="text-3xl font-bold text-slate-900 dark:text-white">@ViewBag.v1</h3>
                </div>
            </div>
        </div>

        <!-- Stat Card: Messages -->
        <div class="group relative overflow-hidden rounded-2xl border border-slate-200 bg-white p-6 transition-all hover:shadow-lg dark:border-slate-800 dark:bg-surface-dark">
            <div class="flex items-center gap-4">
                <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-green-50 text-green-600 transition-colors group-hover:bg-green-600 group-hover:text-white dark:bg-green-500/10 dark:text-green-400 dark:group-hover:bg-green-500">
                    <span class="material-symbols-outlined text-3xl">mail</span>
                </div>
                <div>
                    <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Total Messages</p>
                    <h3 class="text-3xl font-bold text-slate-900 dark:text-white">@ViewBag.v2</h3>
                </div>
            </div>
        </div>

        <!-- Stat Card: Unread Messages -->
        <div class="group relative overflow-hidden rounded-2xl border border-slate-200 bg-white p-6 transition-all hover:shadow-lg dark:border-slate-800 dark:bg-surface-dark">
            <div class="flex items-center gap-4">
                <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-amber-50 text-amber-600 transition-colors group-hover:bg-amber-600 group-hover:text-white dark:bg-amber-500/10 dark:text-amber-400 dark:group-hover:bg-amber-500">
                    <span class="material-symbols-outlined text-3xl">mark_email_unread</span>
                </div>
                <div>
                    <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Unread Messages</p>
                    <h3 class="text-3xl font-bold text-slate-900 dark:text-white">@ViewBag.v3</h3>
                </div>
            </div>
        </div>

        <!-- Stat Card: Works/Projects -->
        <div class="group relative overflow-hidden rounded-2xl border border-slate-200 bg-white p-6 transition-all hover:shadow-lg dark:border-slate-800 dark:bg-surface-dark">
            <div class="flex items-center gap-4">
                <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-purple-50 text-purple-600 transition-colors group-hover:bg-purple-600 group-hover:text-white dark:bg-purple-500/10 dark:text-purple-400 dark:group-hover:bg-purple-500">
                    <span class="material-symbols-outlined text-3xl">work_history</span>
                </div>
                <div>
                    <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Total Projects</p>
                    <h3 class="text-3xl font-bold text-slate-900 dark:text-white">@ViewBag.v4</h3>
                </div>
            </div>
        </div>
         <!-- Stat Card: Experiences -->
        <div class="group relative overflow-hidden rounded-2xl border border-slate-200 bg-white p-6 transition-all hover:shadow-lg dark:border-slate-800 dark:bg-surface-dark">
            <div class="flex items-center gap-4">
                <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-rose-50 text-rose-600 transition-colors group-hover:bg-rose-600 group-hover:text-white dark:bg-rose-500/10 dark:text-rose-400 dark:group-hover:bg-rose-500">
                    <span class="material-symbols-outlined text-3xl">history_edu</span>
                </div>
                <div>
                    <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Experiences</p>
                    <h3 class="text-3xl font-bold text-slate-900 dark:text-white">@ViewBag.v6</h3>
                </div>
            </div>
        </div>
    </div>
</div>

