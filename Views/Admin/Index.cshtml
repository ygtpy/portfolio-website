@{
    Layout = null;
}
<!DOCTYPE html>

<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Portfolio Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Spline+Sans:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#135bec",
                        "background-light": "#f6f6f8",
                        "background-dark": "#101622",
                        "surface-dark": "#192233",
                        "surface-light": "#ffffff",
                    },
                    fontFamily: {
                        "display": ["Spline Sans", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "1rem",
                        "lg": "1.5rem",
                        "xl": "2rem",
                        "full": "9999px"
                    },
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        .icon-fill {
            font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-slate-900 dark:text-white overflow-x-hidden">
    <div class="flex h-screen w-full overflow-hidden">
        <!-- Sidebar -->
        <aside class="hidden w-72 flex-col border-r border-slate-200 dark:border-slate-800 bg-white dark:bg-surface-dark lg:flex">
            <div class="flex h-full flex-col justify-between p-6">
                <div class="flex flex-col gap-8">
                    <!-- User Profile Snippet -->
                    <div class="flex items-center gap-4 px-2">
                        <div class="relative h-12 w-12 overflow-hidden rounded-full border-2 border-primary/20">
                            <img alt="Profile picture of a professional man smiling" class="h-full w-full object-cover" src="https://lh3.googleusercontent.com/aida-public/AB6AXuCpzIu5IoDCyHTBAGIOoLL2LvFx5I77W_1jXj52H7onnbQw0wiOR_Ezc6zIFciKGjw1oixxRtr830ZkDx6lcTSYtBFWc8Y6okSfcHXKQla278hc8ZcakGSWoyG4xmHfNFBPcaQ0Hafxog591MxLlOG1Zu2Si6yz4v-v8nHnukbyqzifI6KRzf5sqNcy9u0Icbh3qYEMtdCecfX4NJKj8QuTAt24IUUZ_CYel2BObWhf4ZXnCeELqaCCgos-HkQIgyDtT2EIy4up5bSt" />
                            <div class="absolute bottom-0 right-0 h-3 w-3 rounded-full bg-primary border-2 border-white dark:border-surface-dark"></div>
                        </div>
                        <div class="flex flex-col">
                            <h1 class="text-base font-bold leading-tight">Alex Morgan</h1>
                            <p class="text-xs font-medium text-slate-500 dark:text-slate-400">Portfolio Admin</p>
                        </div>
                    </div>
                    <!-- Navigation Links -->
                    @await Component.InvokeAsync("_AdminLayoutSidebarComponentPartial")
                </div>
                <!-- Bottom Links -->
                <div class="flex flex-col gap-2">
                    <a class="group flex items-center gap-3 rounded-full px-4 py-3 text-slate-600 transition-colors hover:bg-slate-100 dark:text-slate-400 dark:hover:bg-slate-800/50" href="#">
                        <span class="material-symbols-outlined group-hover:text-primary transition-colors">settings</span>
                        <span class="text-sm font-medium group-hover:text-slate-900 dark:group-hover:text-white">Settings</span>
                    </a>
                    <a class="group flex items-center gap-3 rounded-full px-4 py-3 text-slate-600 transition-colors hover:bg-red-50 dark:text-slate-400 dark:hover:bg-red-900/10" href="#">
                        <span class="material-symbols-outlined group-hover:text-red-500 transition-colors">logout</span>
                        <span class="text-sm font-medium group-hover:text-red-600 dark:group-hover:text-red-400">Logout</span>
                    </a>
                </div>
            </div>
        </aside>
        <!-- Main Content Area -->
        <main class="flex h-full flex-1 flex-col overflow-y-auto">
            <!-- Mobile Header -->
            <header class="sticky top-0 z-20 flex h-16 items-center justify-between border-b border-slate-200 bg-white/80 px-6 backdrop-blur-md dark:border-slate-800 dark:bg-background-dark/80 lg:hidden">
                <div class="flex items-center gap-3">
                    <button class="flex items-center text-slate-600 dark:text-slate-300">
                        <span class="material-symbols-outlined">menu</span>
                    </button>
                    <span class="text-lg font-bold">Portfolio Admin</span>
                </div>
                <div class="h-8 w-8 overflow-hidden rounded-full border border-primary/20">
                    <img alt="User profile thumbnail" class="h-full w-full object-cover" src="https://lh3.googleusercontent.com/aida-public/AB6AXuDj9zPMPnSROMDDXX7v44JPVPeEgLkY1RqupsHlskBqD-NQaHs3xAIqQnf2UzAoMPd8VC0Y20y9p3ez-xqlIXJBhTAUTRQ1c3zkLfSSI5K96RVB0tev9BOWl8tHTHpM32df2HXa9NDTvNs_Jv2Llc2bjvWYKKg7F5DnJ50_Q8DfuTBrtrts7L7C5EVUdQEigE8Od4QfnL5uZMM86zqXnPERpxEpc0MTZEImojeTu7OIdkl8e_SHv-bxeU6kn2RRH6lLVJde4MVw1rAn" />
                </div>
            </header>
            <!-- Dashboard Content -->
            @RenderBody()
        </main>
    </div>
</body>
</html>