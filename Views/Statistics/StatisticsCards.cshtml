@{
    ViewData["Title"] = "StatisticsCards";
    Layout = "~/Views/Admin/Index.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="p-8 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto">

        <div class="mb-12">
            <h2 class="text-3xl font-black text-gray-800 flex items-center gap-3">
                <span class="w-3 h-10 bg-indigo-600 rounded-full"></span>
                Dashboard İstatistik Paneli
            </h2>
            <p class="text-gray-500 mt-2 ml-6 font-medium text-sm uppercase tracking-widest">Sistem Genel Özeti ve Mesaj Analizi</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">

            <div class="relative group bg-white p-8 rounded-[2rem] shadow-xl shadow-blue-100/50 border border-white hover:scale-[1.03] transition-all duration-500">
                <div class="absolute -top-6 -left-6 w-16 h-16 bg-blue-600 rounded-2xl rotate-12 shadow-xl shadow-blue-300 flex items-center justify-center group-hover:rotate-0 transition-all duration-300 z-10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                    </svg>
                </div>
                <div class="relative pt-2">
                    <p class="text-xs font-black text-blue-500 uppercase tracking-widest mb-1">Genel İleti</p>
                    <h3 class="text-2xl font-bold text-gray-700">Gelen Kutusu</h3>
                    <div class="mt-6 flex items-end justify-between">
                        <span class="text-6xl font-black text-gray-800 tracking-tighter">@ViewBag.messageCount</span>
                        <div class="space-y-1 text-right">
                            <div class="text-[10px] font-bold text-emerald-600 bg-emerald-50 px-2 py-1 rounded-lg border border-emerald-100 italic">Okundu: @ViewBag.messageCountByIsReadTrue</div>
                            <div class="text-[10px] font-bold text-rose-600 bg-rose-50 px-2 py-1 rounded-lg border border-rose-100 italic">Okunmadı: @ViewBag.messageCountByIsReadFalse</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="relative group bg-white p-8 rounded-[2rem] shadow-xl shadow-amber-100/50 border border-white hover:scale-[1.03] transition-all duration-500">
                <div class="absolute -top-6 -left-6 w-16 h-16 bg-amber-500 rounded-2xl -rotate-12 shadow-xl shadow-amber-300 flex items-center justify-center group-hover:rotate-0 transition-all duration-300 z-10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                </div>
                <div class="relative pt-2">
                    <p class="text-xs font-black text-amber-500 uppercase tracking-widest mb-1">Yetenekler</p>
                    <h3 class="text-2xl font-bold text-gray-700">Toplam Portfolyo</h3>
                    <div class="mt-6">
                        <div class="flex items-baseline gap-2">
                            <span class="text-6xl font-black text-gray-800 tracking-tighter">@ViewBag.skillCount</span>
                            <span class="text-sm font-bold text-gray-400">Aktif Yetenek</span>
                        </div>
                        <div class="mt-4">
                            <div class="flex justify-between mb-1">
                                <span class="text-[10px] font-bold text-gray-500 uppercase">Ortalama Başarı</span>
                                <span class="text-xs font-black text-amber-600">%@Convert.ToDecimal(ViewBag.skillAvgValue).ToString("0")</span>
                            </div>
                            <div class="w-full bg-gray-100 rounded-full h-2">
                                <div class="bg-amber-500 h-2 rounded-full shadow-inner transition-all duration-1000" style="width: @ViewBag.skillAvgValue%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="relative group bg-gradient-to-br from-indigo-600 to-violet-700 p-8 rounded-[2rem] shadow-xl shadow-indigo-200 hover:scale-[1.03] transition-all duration-500">
                <div class="absolute -top-6 -left-6 w-16 h-16 bg-white rounded-2xl rotate-12 shadow-xl flex items-center justify-center group-hover:rotate-0 transition-all duration-300 z-10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="relative pt-2 text-white">
                    <p class="text-xs font-black text-indigo-200 uppercase tracking-widest mb-1">Uzmanlık Seviyesi</p>
                    <h3 class="text-2xl font-bold">Yüksek Yetkinlik</h3>
                    <div class="mt-8 flex items-baseline gap-3">
                        <span class="text-7xl font-black tracking-tighter text-white">@ViewBag.skillValueBiggerThan70</span>
                        <div class="text-sm font-medium text-indigo-100"> 1 Yıl Üzeri Deneyim</div>
                    </div>
                    <div class="mt-4 pt-4 border-t border-white/20 text-indigo-100 text-[10px] italic">
                        Sistemde kayıtlı 1 Yıl ve üzeri deneyime sahip yeteneklerin toplamı.
                    </div>
                </div>
            </div>

            <div class="relative group bg-white p-8 rounded-[2rem] shadow-xl shadow-emerald-100/50 border border-white hover:scale-[1.03] transition-all duration-500">
                <div class="absolute -top-6 -left-6 w-16 h-16 bg-emerald-500 rounded-2xl rotate-6 shadow-xl shadow-emerald-200 flex items-center justify-center group-hover:rotate-0 transition-all duration-300 z-10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>
                <div class="relative pt-2">
                    <p class="text-xs font-black text-emerald-500 uppercase tracking-widest mb-1">Business</p>
                    <h3 class="text-2xl font-bold text-gray-700 leading-tight">Proje & İş Birliği</h3>
                    <div class="mt-8 flex items-end justify-between">
                        <span class="text-6xl font-black text-gray-800 tracking-tighter">@ViewBag.messageSubjectByWorkOffer</span>
                        <span class="mb-2 text-xs font-bold text-emerald-700 bg-emerald-50 px-3 py-1 rounded-full uppercase italic">Teklif</span>
                    </div>
                </div>
            </div>

            <div class="relative group bg-white p-8 rounded-[2rem] shadow-xl shadow-cyan-100/50 border border-white hover:scale-[1.03] transition-all duration-500">
                <div class="absolute -top-6 -left-6 w-16 h-16 bg-cyan-500 rounded-2xl -rotate-6 shadow-xl shadow-cyan-200 flex items-center justify-center group-hover:rotate-0 transition-all duration-300 z-10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                    </svg>
                </div>
                <div class="relative pt-2">
                    <p class="text-xs font-black text-cyan-500 uppercase tracking-widest mb-1">Development</p>
                    <h3 class="text-2xl font-bold text-gray-700 leading-tight">Web / API Geliştirme</h3>
                    <div class="mt-8 flex items-end justify-between">
                        <span class="text-6xl font-black text-gray-800 tracking-tighter">@ViewBag.messageSubjectByApiDevelopment</span>
                        <span class="mb-2 text-xs font-bold text-cyan-700 bg-cyan-50 px-3 py-1 rounded-full uppercase italic">Talep</span>
                    </div>
                </div>
            </div>

            <div class="relative group bg-white p-8 rounded-[2rem] shadow-xl shadow-rose-100/50 border border-white hover:scale-[1.03] transition-all duration-500">
                <div class="absolute -top-6 -left-6 w-16 h-16 bg-rose-500 rounded-2xl rotate-12 shadow-xl shadow-rose-200 flex items-center justify-center group-hover:rotate-0 transition-all duration-300 z-10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                </div>
                <div class="relative pt-2">
                    <p class="text-xs font-black text-rose-500 uppercase tracking-widest mb-1">Academy</p>
                    <h3 class="text-2xl font-bold text-gray-700 leading-tight">Eğitim & Kurumsal</h3>
                    <div class="mt-8 flex items-end justify-between">
                        <span class="text-6xl font-black text-gray-800 tracking-tighter">@ViewBag.messageSubjectByEducationOffer</span>
                        <span class="mb-2 text-xs font-bold text-rose-700 bg-rose-50 px-3 py-1 rounded-full uppercase italic">Eğitim</span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>