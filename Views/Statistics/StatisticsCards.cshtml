@{
    ViewData["Title"] = "StatisticsCards";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="p-8 bg-gray-50 min-h-screen font-sans">
    <div class="max-w-7xl mx-auto">

        <div class="mb-12">
            <h2 class="text-3xl font-black text-gray-800 flex items-center gap-3">
                <span class="w-3 h-10 bg-indigo-600 rounded-full"></span>
                Dashboard istatistik Paneli
            </h2>
            <p class="text-gray-500 mt-2 ml-6 font-medium text-sm uppercase tracking-widest">Sistem Genel özeti ve Mesaj Analizi</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">

            <div class="relative overflow-hidden group bg-white p-6 rounded-2xl shadow-sm border border-gray-100 hover:shadow-xl transition-all duration-300">
                <div class="absolute -right-4 -top-4 w-24 h-24 bg-indigo-50 rounded-full group-hover:scale-110 transition-transform duration-500"></div>
                <div class="relative flex items-center gap-4">
                    <div class="p-4 bg-indigo-600 rounded-xl text-white shadow-lg shadow-indigo-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Toplam Mesaj</p>
                        <h3 class="text-3xl font-bold text-gray-800">@ViewBag.messageCount</h3>
                    </div>
                </div>
                <div class="mt-6 flex gap-3">
                    <div class="flex-1 bg-green-50 p-3 rounded-lg border border-green-100">
                        <p class="text-xs text-green-600 font-semibold">Okundu</p>
                        <p class="text-lg font-bold text-green-700">@ViewBag.messageCountByIsReadTrue</p>
                    </div>
                    <div class="flex-1 bg-red-50 p-3 rounded-lg border border-red-100">
                        <p class="text-xs text-red-600 font-semibold">Okunmadı</p>
                        <p class="text-lg font-bold text-red-700">@ViewBag.messageCountByIsReadFalse</p>
                    </div>
                </div>
            </div>

            <div class="relative overflow-hidden group bg-white p-6 rounded-2xl shadow-sm border border-gray-100 hover:shadow-xl transition-all duration-300">
                <div class="absolute -right-4 -top-4 w-24 h-24 bg-amber-50 rounded-full group-hover:scale-110 transition-transform duration-500"></div>
                <div class="relative flex items-center gap-4">
                    <div class="p-4 bg-amber-500 rounded-xl text-white shadow-lg shadow-amber-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Toplam Yetenek</p>
                        <h3 class="text-3xl font-bold text-gray-800">@ViewBag.skillCount</h3>
                    </div>
                </div>
                <div class="mt-6">
                    <div class="flex justify-between mb-2">
                        <span class="text-xs font-semibold text-gray-600 italic">Genel Yetkinlik Ortalaması</span>
                        <span class="text-xs font-bold text-amber-600">%@Convert.ToDecimal(ViewBag.skillAvgValue).ToString("0")</span>
                    </div>
                    <div class="w-full bg-gray-100 rounded-full h-3">
                        <div class="bg-amber-500 h-3 rounded-full shadow-inner" style="width: @ViewBag.skillAvgValue%"></div>
                    </div>
                </div>
            </div>

            <div class="relative overflow-hidden group bg-gradient-to-br from-emerald-500 to-teal-600 p-6 rounded-2xl shadow-lg shadow-emerald-200 hover:scale-[1.02] transition-all duration-300 text-white">
                <div class="relative flex flex-col h-full justify-between">
                    <div class="flex justify-between items-start">
                        <div class="p-3 bg-white/20 backdrop-blur-md rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <span class="text-white/80 text-xs font-medium border border-white/30 px-2 py-1 rounded-full backdrop-blur-sm">Performans</span>
                    </div>
                    <div class="mt-8">
                        <h3 class="text-4xl font-extrabold">@ViewBag.skillValueBiggerThan70</h3>
                        <p class="text-emerald-100 text-sm opacity-90">70 Puan üzeri Uzmanlık</p>
                    </div>
                    <div class="mt-4 pt-4 border-t border-white/20 text-white/90 text-xs italic">
                        Yüksek yetkinlik seviyesi zeti.
                    </div>
                </div>
            </div>

        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">

            <div class="relative group bg-white p-8 rounded-[2rem] shadow-xl shadow-emerald-100/50 border border-white hover:scale-[1.03] transition-all duration-500">
                <div class="absolute -top-6 -left-6 w-16 h-16 bg-emerald-500 rounded-2xl rotate-6 shadow-xl shadow-emerald-200 flex items-center justify-center group-hover:rotate-0 transition-all duration-300 z-10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>
                <div class="relative pt-2">
                    <p class="text-xs font-black text-emerald-500 uppercase tracking-widest mb-1">Business</p>
                    <h3 class="text-2xl font-bold text-gray-700 leading-tight">Proje & İş Birliği</h3>
                    <div class="mt-8 flex items-end justify-between">
                        <span class="text-6xl font-black text-gray-800 tracking-tighter">@ViewBag.messageSubjectByWorkOffer</span>
                        <span class="mb-2 text-xs font-bold text-emerald-700 bg-emerald-50 px-3 py-1 rounded-full uppercase italic">Teklif</span>
                    </div>
                </div>
            </div>

            <div class="relative group bg-white p-8 rounded-[2rem] shadow-xl shadow-cyan-100/50 border border-white hover:scale-[1.03] transition-all duration-500">
                <div class="absolute -top-6 -left-6 w-16 h-16 bg-cyan-500 rounded-2xl -rotate-6 shadow-xl shadow-cyan-200 flex items-center justify-center group-hover:rotate-0 transition-all duration-300 z-10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                    </svg>
                </div>
                <div class="relative pt-2">
                    <p class="text-xs font-black text-cyan-500 uppercase tracking-widest mb-1">Development</p>
                    <h3 class="text-2xl font-bold text-gray-700 leading-tight">Staj Başvurusu</h3>
                    <div class="mt-8 flex items-end justify-between">
                        <span class="text-6xl font-black text-gray-800 tracking-tighter">@ViewBag.messageSubjectByInternship</span>
                        <span class="mb-2 text-xs font-bold text-cyan-700 bg-cyan-50 px-3 py-1 rounded-full uppercase italic">Talep</span>
                    </div>
                </div>
            </div>

            <div class="relative group bg-white p-8 rounded-[2rem] shadow-xl shadow-rose-100/50 border border-white hover:scale-[1.03] transition-all duration-500">
                <div class="absolute -top-6 -left-6 w-16 h-16 bg-rose-500 rounded-2xl rotate-12 shadow-xl shadow-rose-200 flex items-center justify-center group-hover:rotate-0 transition-all duration-300 z-10">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                </div>
                <div class="relative pt-2">
                    <p class="text-xs font-black text-rose-500 uppercase tracking-widest mb-1">Academy</p>
                    <h3 class="text-2xl font-bold text-gray-700 leading-tight">Mülakata Davet</h3>
                    <div class="mt-8 flex items-end justify-between">
                        <span class="text-6xl font-black text-gray-800 tracking-tighter">@ViewBag.messageSubjectByInvitationtoInterview</span>
                        <span class="mb-2 text-xs font-bold text-rose-700 bg-rose-50 px-3 py-1 rounded-full uppercase italic">Eğitim</span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

