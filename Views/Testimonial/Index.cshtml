@model List<AkademiQPortfolio.Entities.Testimonial>
@{
    ViewData["Title"] = "Referanslar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="space-y-6">
    <div class="flex justify-between items-center">
        <h2 class="text-2xl font-bold text-slate-800 dark:text-white">Referanslar</h2>
        <a href="/Testimonial/CreateTestimonial" class="px-5 py-2.5 bg-primary text-white rounded-lg font-medium shadow-lg hover:shadow-primary/30 transition-all hover:-translate-y-0.5">
            <span class="flex items-center gap-2"><span class="material-symbols-outlined text-sm">add</span> Yeni Referans Ekle</span>
        </a>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-slate-50 dark:bg-slate-700/50 border-b border-slate-200 dark:border-slate-700 text-xs uppercase text-slate-500 font-semibold">
                    <th class="p-4 w-20">#</th>
                    <th class="p-4">Müşteri</th>
                    <th class="p-4">Şirket</th>
                    <th class="p-4">Yorum</th>
                    <th class="p-4">Görsel</th>
                    <th class="p-4 text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr class="border-b border-slate-100 dark:border-slate-700 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                        <td class="p-4 text-slate-500">@item.TestimonialId</td>
                        <td class="p-4 font-medium text-slate-800 dark:text-slate-200">@item.ClientName</td>
                        <td class="p-4 text-slate-600 dark:text-slate-400">@item.Company</td>
                         <td class="p-4 text-slate-600 dark:text-slate-400 text-sm max-w-xs truncate">@item.Comment</td>
                        <td class="p-4">
                            @if(!string.IsNullOrEmpty(item.ImageUrl)) {
                                <img src="@item.ImageUrl" class="h-10 w-10 object-cover rounded-full border border-slate-200" alt="Client" />
                            }
                        </td>
                        <td class="p-4 text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="p-2 text-indigo-600 hover:bg-indigo-50 rounded-lg transition-colors" title="Düzenle">
                                    <span class="material-symbols-outlined text-lg">edit</span>
                                </a>
                                <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" onclick="return confirm('Silmek istediğinize emin misiniz?')" class="p-2 text-red-500 hover:bg-red-50 rounded-lg transition-colors" title="Sil">
                                    <span class="material-symbols-outlined text-lg">delete</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
         @if(Model.Count == 0) {
            <div class="p-8 text-center text-slate-500">
                Kayıtlı referans bulunamadı.
            </div>
        }
    </div>
</div>
